<Window x:Class="RailworksDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Railworks download station client" Height="400" Width="600" MinWidth="600" MinHeight="400" >
    <Grid>
        <CheckBox x:Name="PathSelected" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="32" IsEnabled="False"/>
        <Button x:Name="SelectRailworksLocation" Content="Select Railworks folder location" HorizontalAlignment="Left" Margin="38,10,0,0" VerticalAlignment="Top" Click="SelectRailworksLocation_Click" />
        <Button x:Name="ScanRailworks" Content="Scan for missing assets" HorizontalAlignment="Left" Margin="254,10,0,0" VerticalAlignment="Top" Click="ScanRailworks_Click" />
        <ProgressBar x:Name="TotalProgress" VerticalContentAlignment="Stretch" Margin="425,24,35,0" VerticalAlignment="Top" />

        <ListView x:Name="RoutesList" Margin="10,50,10,50" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0,10" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent" />
                    <EventSetter Event="PreviewMouseDoubleClick" Handler="ListViewItem_PreviewMouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="{Binding Name}" Margin="10,0" VerticalContentAlignment="Center" />
                        <ProgressBar Value="{Binding Progress, Mode=OneWay}" Foreground="{Binding ProgressBackground, Mode=OneWay}" HorizontalAlignment="Stretch" Grid.Column="1" Margin="10,0,25,0" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="DownloadMissing" IsEnabled="False" Content="Download missing assets" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom" />
        <Grid x:Name="SavingGrid" Margin="0,0,190,0.333" VerticalAlignment="Bottom" Height="50"  Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label x:Name="SavingLabel" Content="Saving" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Margin="10,12" VerticalAlignment="Center" Height="26" />
            <ProgressBar Margin="10,25,10,23" VerticalAlignment="Center" IsIndeterminate="True" Grid.Column="1" Height="2" HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</Window>
