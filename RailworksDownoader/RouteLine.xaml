<UserControl x:Class="RailworksDownloader.RouteLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RailworksDownloader"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="{Binding RouteName, ElementName=RouteLine}" Margin="10,0" VerticalContentAlignment="Center" />
        <ProgressBar Value="{Binding RouteProgress, ElementName=RouteLine}" Grid.Column="1" Margin="10,0"/>
    </Grid>
</UserControl>
